{
  "version": "1.0.0",
  "commands": {
    "create": {
      "id": "create",
      "description": "Create an empty Nx Workspace",
      "pluginName": "nxplus",
      "pluginType": "core",
      "aliases": [],
      "flags": {
        "help": {
          "name": "help",
          "type": "boolean",
          "char": "h",
          "description": "show CLI help",
          "allowNo": false
        },
        "dry-run": { "name": "dry-run", "type": "boolean", "allowNo": false },
        "skip-git": { "name": "skip-git", "type": "boolean", "allowNo": false },
        "skip-install": { "name": "skip-install", "type": "boolean", "allowNo": false },
        "cli": {
          "name": "cli",
          "type": "option",
          "helpValue": "(angular|nx)",
          "options": ["angular", "nx"],
          "default": "nx"
        },
        "package-manager": {
          "name": "package-manager",
          "type": "option",
          "helpValue": "(yarn|npm)",
          "options": ["yarn", "npm"],
          "default": "yarn"
        }
      },
      "args": [{ "name": "name", "required": true }]
    },
    "hello": {
      "id": "hello",
      "description": "describe the command here",
      "pluginName": "nxplus",
      "pluginType": "core",
      "aliases": [],
      "examples": ["$ nxplus hello\nhello world from ./src/hello.ts!\n"],
      "flags": {
        "help": {
          "name": "help",
          "type": "boolean",
          "char": "h",
          "description": "show CLI help",
          "allowNo": false
        },
        "name": { "name": "name", "type": "option", "char": "n", "description": "name to print" },
        "force": { "name": "force", "type": "boolean", "char": "f", "allowNo": false }
      },
      "args": [{ "name": "file" }]
    }
  }
}
